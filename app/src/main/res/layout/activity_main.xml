    <!--<Button-->
    <!--android:id="@+id/btn_clear"-->
    <!--android:layout_width="150dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_below="@+id/btn_add"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:text="点击清空"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <com.soft.niuyi.badgeview.BadgeView
            android:id="@+id/bv_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:badgeImageIcon="@drawable/tab_home"
            app:badgeText="首页"
            app:badgeTextColor="@android:color/black"
            app:badgeTextSize="15sp"/>

        <com.soft.niuyi.badgeview.BadgeView
            android:id="@+id/bv_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:badgeImageIcon="@drawable/tab_classify"
            app:badgeText="分类"
            app:badgeTextColor="@android:color/black"
            app:badgeTextSize="15sp"/>

        <com.soft.niuyi.badgeview.BadgeView
            android:id="@+id/bv_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:badgeImageIcon="@drawable/tab_cart"
            app:badgeText="消息"
            app:badgeTextColor="@android:color/black"
            app:badgeTextSize="15sp"/>

        <com.soft.niuyi.badgeview.BadgeView
            android:id="@+id/bv_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:badgeImageIcon="@drawable/tab_mine"
            app:badgeText="我的"
            app:badgeTextColor="@android:color/black"
            app:badgeTextSize="15sp"/>

    </LinearLayout>

</LinearLayout>
